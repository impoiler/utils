{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react",
		"module": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "lib/esm",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declarationDir": "lib/types",
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "**/node_modules"]
}
